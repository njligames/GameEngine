sips -Z 16 $PROJECT_PATH/Images.xcassets/AppIcon.appiconset/Icon32.png --out $PROJECT_PATH/Images.xcassets/AppIcon.appiconset/Icon16.png














# iPhone 3.5" @2x
sips -Z 960 -c 640 960 -r 90 $SCRIPTPATH/Default-Input.png --out $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default640x960.png
# iPhone 3.5" @1x
sips -Z 480 $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default640x960.png --out $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default320x480.png
