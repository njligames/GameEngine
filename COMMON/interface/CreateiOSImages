#!/bin/sh

#SOURCE: https://github.com/danielpovlsen/ios-icons-launch-images-generator

#PROJECT_PATH="../../ios/JLIGameEngineTest/JLIGameEngineTest"
PROJECT_PATH="../../APPLE/IOS"
# MAC_PROJECT_PATH="../../macosx/YappyBirds"
# ANROID_PROJECT_PATH="../../android/app/src/main/res"


pushd `dirname $0` > /dev/null
SCRIPTPATH=`pwd -P`
popd > /dev/null
echo JAMES $SCRIPTPATH

# iPhone
# Spotlight - iOS 5,6
# Settings - iOS 5-8
# 29pt - 1x,2x,3x
sips -Z 87 $SCRIPTPATH/Icon-Input.png --out $PROJECT_PATH/Images.xcassets/AppIcon.appiconset/Icon87.png
sips -Z 58 $SCRIPTPATH/Icon-Input.png --out $PROJECT_PATH/Images.xcassets/AppIcon.appiconset/Icon58.png
sips -Z 29 $PROJECT_PATH/Images.xcassets/AppIcon.appiconset/Icon58.png --out $PROJECT_PATH/Images.xcassets/AppIcon.appiconset/Icon29.png

# iPhone
# Spotlight - iOS 7-8
# 40pt 2x,3x
sips -Z 120 $SCRIPTPATH/Icon-Input.png --out $PROJECT_PATH/Images.xcassets/AppIcon.appiconset/Icon120.png
sips -Z 80 $SCRIPTPATH/Icon-Input.png --out $PROJECT_PATH/Images.xcassets/AppIcon.appiconset/Icon80.png

# iPhone
# App - iOS 5,6
# 57pt 1x,2x
sips -Z 114 $SCRIPTPATH/Icon-Input.png --out $PROJECT_PATH/Images.xcassets/AppIcon.appiconset/Icon114.png
sips -Z 57 $PROJECT_PATH/Images.xcassets/AppIcon.appiconset/Icon114.png --out $PROJECT_PATH/Images.xcassets/AppIcon.appiconset/Icon57.png

# iPhone
# App - iOS 7,8
# 60pt 2x,3x
sips -Z 180 $SCRIPTPATH/Icon-Input.png --out $PROJECT_PATH/Images.xcassets/AppIcon.appiconset/Icon180.png
