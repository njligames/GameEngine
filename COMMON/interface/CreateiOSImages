sips -Z 1136 -c 640 1136 -r 90 $SCRIPTPATH/Default-Input.png --out $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default640x1136.png

# iPhone 5.5" @3x - landscape
sips -Z 2208 -c 1242 2208 $SCRIPTPATH/Default-Input.png --out $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default2208x1242.png
# iPhone 5.5" @3x - portrait
sips -r 90 $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default2208x1242.png --out $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default1242x2208.png
# iPhone 4.7" @2x
sips -Z 1334 -c 750 1334 -r 90 $SCRIPTPATH/Default-Input.png --out $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default750x1334.png

# iPad @2x - landscape
sips -Z 2048 $SCRIPTPATH/Default-Input.png --out $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default2048x1536.png
# iPad @2x - portrait
sips -r 90 $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default2048x1536.png --out $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default1536x2048.png
# iPad @1x - landscape
sips -Z 1024 $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default2048x1536.png --out $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default1024x768.png
# iPad @1x - portrait
sips -r 90 $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default1024x768.png --out $PROJECT_PATH/Images.xcassets/LaunchImage.launchimage/Default768x1024.png


